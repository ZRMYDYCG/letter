	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8",
		"navigationStyle": "custom"
	},
	"tabBar": {
		"selectedColor": "#000",
		"color": "#707070",
		"backgroundColor": "#f7f7f7",
		"list": [{
				"pagePath": "pages/text/index",
				"text": "文字",
				"iconPath": "static/images/tabbar/text.png",
				"selectedIconPath": "static/images/tabbar/text-selected.png"
			},
			{
				"pagePath": "pages/picture/index",
				"text": "照片",
				"iconPath": "static/images/tabbar/picture.png",
				"selectedIconPath": "static/images/tabbar/picture-selected.png"
			},
			{
				"pagePath": "pages/video/index",
				"text": "视频",
				"iconPath": "static/images/tabbar/video.png",
				"selectedIconPath": "static/images/tabbar/video-selected.png"
			},
			{
				"pagePath": "pages/mine/index",
				"text": "我的",
				"iconPath": "static/images/tabbar/mine.png",
				"selectedIconPath": "static/images/tabbar/mine-selected.png"
			}
		]
	},
	"easycom": {
		"autoscan": true,
		"custom": {
			"^wr-(.*)": "@/components/wr-$1/wr-$1.vue",
			"^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue"
		}
	}
